/* 包裹图片和两行文字 */

.view_tupian_wenzi {
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
  /* 圆角 */
  border-radius: 20rpx;

  /* 边 */
  border: 3rpx solid #E0E3DA;
  box-shadow:5rpx 5rpx 5rpx 5rpx #E0E3DA;

  background-color: #ffffff;
  margin: 30rpx;

  /* padding使得文字和图片不至于贴着边框 */
  padding: 30rpx;

}

/* 图片 */

.image_1 {
  width: 100rpx;
  height: 100rpx;
}

/* 包裹两行文字 */

.view_wenzi2 {
  width: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

/* 小字 */

.text_small {
  font-size: 30rpx;
  word-break: break-all;
  color: #7a7878;
  margin-top: 10rpx
}
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
  margin-top:10rpx;
}
.operBtn {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #1296db;
  margin: 20rpx auto;
  text-align: center;
  border-radius: 8rpx;
}
.operBtnDelete {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #fff;
  background-color:red;
  margin: 20rpx auto;
  text-align: center;
  border-radius: 8rpx;
}
.btn-container{
  display: flex;
  width: 720rpx;
  margin: 0 -50rpx;
  flex-direction: row;
  justify-content: space-between
}